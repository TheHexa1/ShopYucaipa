        android:id="@+id/btn_submit_ratings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rating_btn_submit_margin_left_right"
        android:layout_marginRight="@dimen/rating_btn_submit_margin_left_right"
