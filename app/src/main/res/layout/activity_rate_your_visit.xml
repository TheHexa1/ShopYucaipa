<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yucaipa.shop.activities.RateYourVisitActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/rate_your_visit_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Rate Your Visit"
        app:titleTextColor="#fff" />

    <TextView
        android:id="@+id/tv_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Thank you for your feedback."
        android:textSize="18sp"
        android:textStyle="italic"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_shop_logo"
        android:layout_width="@dimen/shop_logo_width_height"
        android:layout_height="100dp"
        android:layout_below="@+id/rate_your_visit_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/shop_logo_margin_bottom"
        android:layout_marginTop="@dimen/shop_logo_margin_top" />

    <RelativeLayout
        android:id="@+id/rl_main_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_shop_logo">

        <Button
            android:id="@+id/btn_submit_ratings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_5"
            android:layout_marginLeft="@dimen/rating_btn_submit_margin_left_right"
            android:layout_marginRight="@dimen/rating_btn_submit_margin_left_right"
            android:layout_marginTop="@dimen/rating_btn_submit_margin_top"
            android:background="@color/primary"
            android:text="Submit"
            android:textColor="#fff"
            android:textSize="@dimen/rating_btn_submit_font_size" />

        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rating_margin_left"
                android:text="Efficiency"
                android:textSize="@dimen/ratings_font_size" />

            <RadioGroup
                android:id="@+id/rg_efficiency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_ef_excellent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/excellent_margin_right" />

                <RadioButton
                    android:id="@+id/rb_ef_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/other_rating_margin_right" />

                <RadioButton
                    android:id="@+id/rb_ef_fair"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/other_rating_margin_right" />

                <RadioButton
                    android:id="@+id/rb_ef_poor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/other_rating_margin_right" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rating_margin_left"
                android:text="Knowlegeable"
                android:textSize="@dimen/ratings_font_size" />

            <RadioGroup
                android:id="@+id/rg_knowledgeable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_kn_excellent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/excellent_margin_right" />

                <RadioButton
                    android:id="@+id/rb_kn_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/other_rating_margin_right" />

                <RadioButton
                    android:id="@+id/rb_kn_fair"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/other_rating_margin_right" />

                <RadioButton
                    android:id="@+id/rb_kn_poor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/other_rating_margin_right" />
            </RadioGroup>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_shop_logo"
            android:layout_margin="@dimen/title_margin"
            android:gravity="center"
            android:text="Please rate your visit"
            android:textSize="@dimen/title_font_size"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/other_rating_margin_right"
                android:text="Excellent"
                android:textSize="@dimen/ratings_font_size" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/other_rating_margin_right"
                android:text="Good"
                android:textSize="@dimen/ratings_font_size" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/other_rating_margin_right"
                android:text="Fair"
                android:textSize="@dimen/ratings_font_size" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/other_rating_margin_right"
                android:text="Poor"
                android:textSize="@dimen/ratings_font_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_3"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rating_margin_left"
                android:text="Helpful/Courteous"
                android:textSize="@dimen/ratings_font_size" />

            <RadioGroup
                android:id="@+id/rg_helpful"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_hl_excellent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/excellent_margin_right" />

                <RadioButton
                    android:id="@+id/rb_hl_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/other_rating_margin_right" />

                <RadioButton
                    android:id="@+id/rb_hl_fair"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/other_rating_margin_right" />

                <RadioButton
                    android:id="@+id/rb_hl_poor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/other_rating_margin_right" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_4"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rating_margin_left"
                android:text="Overall Experience"
                android:textSize="@dimen/ratings_font_size" />

            <RadioGroup
                android:id="@+id/rg_overall_exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_ov_excellent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/excellent_margin_right" />

                <RadioButton
                    android:id="@+id/rb_ov_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/other_rating_margin_right" />

                <RadioButton
                    android:id="@+id/rb_ov_fair"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/other_rating_margin_right" />

                <RadioButton
                    android:id="@+id/rb_ov_poor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/other_rating_margin_right" />
            </RadioGroup>

        </LinearLayout>

    </RelativeLayout>

