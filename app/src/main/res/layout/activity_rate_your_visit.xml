    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/rate_your_visit_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Rate Your Visit"
        app:titleTextColor="#fff" />

    <ImageView
        android:id="@+id/iv_shop_logo"
        android:layout_width="@dimen/shop_logo_width_height"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/shop_logo_margin_bottom"
        android:layout_marginTop="@dimen/shop_logo_margin_top" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/title_margin"
        android:gravity="center"
        android:text="Please rate your visit"
        android:textSize="@dimen/title_font_size"
        android:textStyle="bold|italic" />

